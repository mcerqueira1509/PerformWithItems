<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PerformWithItems.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:PerformWithItems.Pages"
    
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False"
    Shell.TabBarUnselectedColor="#888"
    Shell.BackgroundColor="#ccc"
    Shell.ForegroundColor="#222"
    Shell.TabBarBackgroundColor="#ccc"
    Shell.TabBarForegroundColor="#222"
    
    Title="PerformWithItems">

    <ShellContent ContentTemplate="{DataTemplate pages:MainPage}" Route="MainPage" Title="Main"/>
    <ShellContent ContentTemplate="{DataTemplate pages:Page1}" Route="Page1" Title="Page1" />
    <ShellContent ContentTemplate="{DataTemplate pages:Page2}" Route="Page2" Title="Page2" />
    <ShellContent ContentTemplate="{DataTemplate pages:Page3}" Route="Page3" Title="Page3" />

</Shell>
